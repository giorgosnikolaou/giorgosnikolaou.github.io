---
import { siteConfig } from "../config";
const hasPubs = siteConfig.publications && siteConfig.publications.length > 0;
---

{
  hasPubs && (
    <section id="publications" class="p-8 sm:p-12 md:p-16 lg:p-24" data-nav-label="Publications">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="h2">
              Selected 
            </h2>
            <h2 class="h2">
              Publications
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-8">
              {siteConfig.publications.map((project) => {
                const Component = project.link ? "a" : "div";
                const linkProps = project.link
                  ? {
                      href: project.link,
                      target: "_blank",
                      rel: "noopener noreferrer",
                    }
                  : {};

                return (
                  <div class="group relative">
                    <Component
                      {...linkProps}
                      class={`group block relative overflow-hidden rounded-xl sm:rounded-2xl bg-black/80 shadow-lg transition-all duration-300 ${
                        project.link ? "hover:-translate-y-1 hover:shadow-2xl" : ""
                      }`}
                    >
                      {/* Background image */}
                      <div
                        class="absolute inset-0 bg-cover bg-center opacity-60 transition-transform duration-500 group-hover:scale-105"
                        style={
                          project.image
                            ? `background-image: url('${project.image}')`
                            : `background-image: radial-gradient(circle at top left, ${siteConfig.accentColor}55, #020617 60%)`
                        }
                      />

                      {/* Dark overlay */}
                      <div class="pub-overlay absolute inset-0"></div>
                      
                      {/* Content */}
                      <div class="relative z-10 p-4 sm:p-6 md:p-8">
                        <div class="mb-4 space-y-3">
                          <!-- Title row -->
                          <div class="flex items-start justify-between">
                            <h3 class="h4">
                              {project.name}
                            </h3>
                          </div>

                          <!-- Venue + date row -->
                          <div class="flex items-center justify-between">
                            <p class=".body-not-muted">
                              <span style={`color: ${siteConfig.accentColor}`}>{project.venue}</span>
                              &nbsp;â€“&nbsp;
                              <span class=".body-not-muted">{project.date}</span>
                            </p>
                          </div>

                          <!-- Authors -->
                          <h3 class="authors"
                            set:html={project.authors}
                          />
                        </div>
                      </div>
                    </Component>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
